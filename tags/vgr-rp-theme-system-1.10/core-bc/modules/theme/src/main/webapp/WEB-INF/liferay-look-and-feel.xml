<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.0.11+</version>
	</compatibility>
	<theme id="vgr-theme-2" name="Vgr Theme 2" />
	
	<theme id="vgr-theme-2" name="Vgr Theme 2">
		<settings>
			<setting key="show-breadcrumbs" value="true" />
		</settings>
	</theme>
	<theme id="vgr-theme-2-no-breadcrumbs" name="Vgr Theme 2 (no breadcrumbs)">
		<settings>
			<setting key="show-breadcrumbs" value="false" />
		</settings>
	</theme>

	<theme id="vgr-theme-2-navportlet" name="Vgr Theme 2 (Nav Portlet)">
		<settings>
			<setting key="use-rp-nav-portlet" value="true" />
			<setting key="show-breadcrumbs" value="true" />
		</settings>
	</theme>
	
	<theme id="vgr-theme-2-navportlet-no-breadcrumbs" name="Vgr Theme 2 (Nav Portlet no Breadcrumbs)">
		<settings>
			<setting key="use-rp-nav-portlet" value="true" />
			<setting key="show-breadcrumbs" value="false" />
		</settings>
	</theme>	
	
</look-and-feel>